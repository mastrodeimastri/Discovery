<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProfileFragment">

    <RelativeLayout
        android:id="@+id/buttonsRegion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/welcolmeMSG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20dp"
            android:height="100dp"
            android:text="Benvenuto in Discovery!"/>

        <Button
            android:id="@+id/reportBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcolmeMSG"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:text="Esegui Segnalazione" />

        <Button
            android:id="@+id/guideBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reportBtn"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="Guida" />

        <Button
            android:id="@+id/editData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/guideBtn"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:text="Modifica Dati" />

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editData"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="Log In" />

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/guideBtn"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:text="Log Out" />

    </RelativeLayout>
    <ImageView
        android:layout_margin="50dp"
        android:layout_below="@id/buttonsRegion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"/>

</RelativeLayout>