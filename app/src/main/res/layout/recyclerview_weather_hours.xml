<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/dark_gray"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textTimeHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19:30"
                android:textSize="26sp"
                android:textColor="@color/text_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/textTempHour"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textTempHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16Â°"
                android:textSize="22sp"
                android:textColor="@color/text_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/layoutRainHour"
                app:layout_constraintStart_toEndOf="@id/textTimeHour"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/layoutRainHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@id/layoutWindHour"
                app:layout_constraintEnd_toStartOf="@id/imageWeatherHour"
                app:layout_constraintStart_toEndOf="@id/textTempHour"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textRainHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.2mm"
                    android:textSize="11sp"
                    android:textColor="@color/text_white"
                    android:paddingEnd="4dp"/>

                <ImageView
                    android:id="@+id/imageRainHour"
                    android:src="@drawable/water"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:paddingTop="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutWindHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imageWeatherHour"
                app:layout_constraintStart_toEndOf="@id/textTempHour"
                app:layout_constraintTop_toBottomOf="@id/layoutRainHour">

                <TextView
                    android:id="@+id/textWindHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24km/h"
                    android:textSize="11sp"
                    android:textColor="@color/text_white"
                    android:paddingEnd="4dp"/>

                <ImageView
                    android:id="@+id/imageWindHour"
                    android:src="@drawable/wind"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:paddingTop="4dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/rectangleBackground"
                android:src="@drawable/rectanglebackground"
                android:visibility="invisible"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/layoutRainHour"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/imageWeatherHour"
                android:src="@drawable/storm"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/layoutRainHour"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>